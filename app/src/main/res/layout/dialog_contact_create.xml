<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/save_send_address"
                android:textColor="@color/c_18"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/dialog_contact_create_close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:padding="6dp"
                android:src="@drawable/close" />
        </RelativeLayout>

        <EditText
            android:id="@+id/dialog_contact_create_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/b_f7_4"
            android:hint="@string/enter_alias"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/dialog_contact_create_address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/b_f7_4"
            android:hint="@string/enter_address"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
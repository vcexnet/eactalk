<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/my_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/send_message_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公告类型:" />

                    <RadioGroup
                        android:id="@+id/send_message_notice_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/send_message_notice_zg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昭告" />

                        <RadioButton
                            android:id="@+id/send_message_notice_bl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="爆料" />

                        <RadioButton
                            android:id="@+id/send_message_notice_qg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="情感" />

                        <RadioButton
                            android:id="@+id/send_message_notice_sd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="树洞" />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受地址:" />

                <EditText
                    android:id="@+id/send_message_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址别名" />

                <EditText
                    android:id="@+id/send_message_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送金额(EAC)" />

                <EditText
                    android:id="@+id/send_message_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/send_message_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/b_f6_4"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLength="256"
                        android:minLines="4"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/send_message_content_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:padding="8dp"
                        android:text="0/256" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附件(支持视频/图片/音频):" />

                <ListView
                    android:id="@+id/send_message_file_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/send_message_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/send_message_file_cid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/send_message_file_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传" />

                <LinearLayout
                    android:id="@+id/send_message_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否加密:" />

                    <CheckBox
                        android:id="@+id/send_message_normal_encrypt_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息" />

                    <CheckBox
                        android:id="@+id/send_message_normal_encrypt_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附件" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
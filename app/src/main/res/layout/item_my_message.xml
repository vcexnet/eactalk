<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/item_my_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_white_10"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_my_message_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_my_message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_my_message_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/c_999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_my_message_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_my_message_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_my_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/my_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_key_word_to_recovery"
                android:textColor="@color/c_666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/input_key_word"
                android:textColor="@color/c_333"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:background="@drawable/b_f6_10"
                    android:padding="6dp"
                    app:columnCount="3"
                    app:rowCount="3">

                    <EditText
                        android:id="@+id/input_word_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="1"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_2"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="2"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_3"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="3"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_4"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="4"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_5"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="5"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_6"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="6"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_7"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="7"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_8"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="8"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_9"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="9"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_10"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="10"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_11"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="11"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_12"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <EditText
                        android:id="@+id/input_word_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:hint="12"
                        android:imeOptions="actionDone"
                        android:inputType="text"

                        android:maxLines="1"
                        android:nextFocusForward="@id/input_word_submit"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>

            <Button
                android:id="@+id/input_word_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:text="@string/next" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>